<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PushWords" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appGreen</item>
        <item name="colorSecondaryVariant">@color/appGreen</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>

        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/white</item>
    </style>
</resources>