<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/your_time_zone"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/timeZoneText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="+3 GMC"
            android:textSize="17sp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:gravity="end" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/words_in_one_notification"
            android:textSize="17sp" />

        <NumberPicker
            android:id="@+id/notificationWordCountPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:gravity="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/notification_frequency"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/notificationFrequencySpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:background="@null"
            android:textAlignment="textEnd"
            android:gravity="end" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Период уведомлений"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/notificationInterval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10:00 - 22:00"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/testSettingsButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/test_settings_label"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="start|center"/>

    <TextView
        android:id="@+id/shareAppButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/share"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="start|center"/>

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/sign_out"
        android:textColor="@color/appRed"
        android:gravity="start|center"
        android:layout_gravity="start|center"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:padding="0dp"
        android:background="@android:color/transparent"/>

    <include
        android:id="@+id/subscriptionButton"
        layout="@layout/subscription_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"/>

    <include layout="@layout/sanction_info"/>

</androidx.appcompat.widget.LinearLayoutCompat>